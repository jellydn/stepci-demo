{
  "name": "stepci-demo",
  "type": "module",
  "module": "app.ts",
  "scripts": {
    "dev": "bun run --watch app.ts",
    "build": "tsup app.ts --clean --format esm,cjs",
    "ci": "run-p --race test:server test:e2e",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test:server": "NODE_DEVELOPMENT=test bun run app.ts",
    "test:e2e": "wait-on -l tcp:3000 && stepci run workflow.yml",
    "generate": "stepci generate ./specs/openapi.yaml ./specs/generated.yaml",
    "start": "bun app.ts",
    "start:prod": "node dist/app.js",
    "test": "bunx vitest run",
    "test:ui": "bunx vitest run --ui",
    "test:watch": "bunx vitest run --watch",
    "test:coverage": "bunx vitest run --coverage"
  },
  "dependencies": {
    "@fastify/cors": "3.0.0",
    "@fastify/helmet": "5.0.0",
    "@fastify/swagger": "4.0.0",
    "@fastify/swagger-ui": "^1.0.0",
    "fastify": "4.25.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "@vitest/coverage-c8": "0.33.0",
    "@vitest/coverage-v8": "0.34.6",
    "@vitest/ui": "0.34.7",
    "bun-types": "latest",
    "eslint": "8.56.0",
    "eslint-config-productsway": "1.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.3",
    "stepci": "2.7.2",
    "tsup": "8.0.1",
    "typescript": "5.3.3",
    "unplugin-swc": "1.4.4",
    "vite": "5.0.11",
    "vitest": "0.34.6",
    "wait-on": "7.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
